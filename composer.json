{
	"name": "bluespice/smwconnector",
	"type": "mediawiki-extension",
	"description": "Connector for Semantic MediWiki and BlueSpice. Provide tar package builder and some custom functions.",
	"keywords": [
		"SMW",
		"Semantic MediaWiki",
		"Wiki",
		"MediaWiki",
		"properties",
		"special properties",
		"BlueSpice MediaWiki"
	],
	"homepage": "https://www.mediawiki.org/wiki/Extension:BlueSpiceSMWConnector",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Robert Vogel"
		},
		{
			"name": "Leonid Verhovskij"
		}
	],
	"extra": {
		"installer-name": "BlueSpiceSMWConnector"
	},
	"require": {
		"composer/installers": "1.*,>=1.0.1"
	},
	"autoload": {
		"files" : [
			"bootstrap.php"
		],
		"psr-4": {
			"BlueSpice\\SMWConnector\\Tests\\": "tests/phpunit",
			"BlueSpice\\SMWConnector\\": "src"
		}
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9.2",
		"jakub-onderka/php-console-highlighter": "0.3.2"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules --exclude extensions"
		]
	}
}
